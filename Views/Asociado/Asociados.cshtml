@model IEnumerable<jbchorg.Models.Asociado>
@{
    ViewData["Title"] = "Publicaciones";
}
<div><br/>
    <a asp-action="Asociado">Crear</a></div><br/>
<div class="row">
<form asp-action="asociados" method="GET">
    <input type="text" name="buscar" class="form-control" value="@ViewBag.buscar">
    <button type="submit" class="btn btn-primary">buscar</button>
</form>
</div><br/>
<div class="row">
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>N°</th>
            <th>Nombre y Apellido</th>
            <th>Email</th>
            <th>Genero</th>
            <th>Tipo de Asociado</th>
             <th>Grado Academico</th>
            <th>Áreas de Interés</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                 <td>@Html.DisplayFor(modelItem => item.Id)
                 </td>
                 <td>@Html.DisplayFor(modelItem => item.Nombre)
                     @Html.DisplayFor(modelItem => item.APaterno)
                     @Html.DisplayFor(modelItem => item.AMaterno)
                 </td>
                 <td>@Html.DisplayFor(modelItem => item.Email)
                     
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Genero)
                 </td> 
                 <td>@Html.DisplayFor(modelItem => item.TAsociado.Nombre)
                 </td>
                 <td>@Html.DisplayFor(modelItem => item.GAcademico)
                 </td>
                  <td>@Html.DisplayFor(modelItem => item.Area)
                 </td>
                 <td>
                     <a asp-action="Asociado" asp-route-id="@item.Id">Details</a>
                 </td>
            </tr>
           
        }
    </tbody>
</table>
</div>
