@model IEnumerable<jbchorg.Models.Mensaje>
@{
    ViewData["Title"] = "Lista de Contactos";
}

<div class="row">
<form asp-controller="Mensaje" asp-action="Contactos">
    <div class="col-lg-7">
    <h3>Lista de Contactos</h3>
    <input value="" type="text" name="fNom"  class="form-search form-control" placeholder="Búsqueda por Nombre">
    </div>
    <div class="col-lg-5">
        
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
    </form>
    </div><br/>
<div class="row">
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>N°</th>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
             <th>Imail</th>
             <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                 <td>@Html.DisplayFor(modelItem => item.Id)
                 </td>
                 <td>@Html.DisplayFor(modelItem => item.Nombre)
                     @Html.DisplayFor(modelItem => item.APaterno)
                     @Html.DisplayFor(modelItem => item.AMaterno)
                 </td>
                 <td>@Html.DisplayFor(modelItem => item.Correo)
                 </td>
                          
                
                 <td>
                     <a asp-action="Contactos" asp-route-id="@item.Id">Details</a>
                 </td>
            </tr>
           
        }
    </tbody>
</table>
</div>

<p>Lista</p>
<p><img src="~/images/gracias.png"></p>