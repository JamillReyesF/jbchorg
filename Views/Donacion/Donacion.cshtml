@model jbchorg.Models.Donacion

@{
    ViewData["Title"] = "Donacion";
}

<div class="container">
    <div class="px-3 py-3 pb-md-4 mx-auto text-center">
<h1>Donación</h1>
<h3>Complete el siguiente formulario y podra donar.</h3>
    </div>
    <div class="row">
    <div class="col-md-8 offset-md-2">    
<h3><label>Formulario de donación</label></h3>
</div>
    </div>
    <hr/>
@Html.ValidationSummary()

    <div class="row">

          <div class="col-md-10">

            <form asp-action="Donacion" >

           <div class="col-md-4">
               <div class="form-group"><label>Nombre:</label>
               <input asp-for="Nombre" class="form-control" />
               </div>
           </div>
           <div class="col-md-4">
               <div class="form-group"><label>Apellido Paterno:</label>
               <input asp-for="APaterno" class="form-control" />
               </div>
           </div>
           <div class="col-md-4">
               <div class="form-group"><label>Apellido Materno:</label>
               <input asp-for="AMaterno" class="form-control" />
               </div>
           </div> 
           <div class="col-md-4">
               <div class="form-group"><label>DNI:</label>
               <input asp-for="DNI" class="form-control" />
               </div>
           </div> 
           <div class="col-md-8">
               <div class="form-group"><label>Email:</label>
               <input asp-for="Correo" class="form-control" />
               </div>
           </div>
            <div class="col-md-4">
               <div class="form-group"><label>Teléfono de contacto:</label>
               <input asp-for="Movil" class="form-control" />
               </div>
           </div>
           <div class="col-md-8">
               <div class="form-group"><label>Banco:</label>
               <input asp-for="Banco" class="form-control" />
               </div>
           </div>
           <div class="col-md-12">
               <div class="form-group"><label>Numero de Tarjeta:</label>
               <input asp-for="Tarjeta" class="form-control" />
               </div>
           </div>
           <div class="col-md-12">
               <div class="form-group"><label>Monto:</label>
               <input asp-for="Monto" class="form-control" />
               </div>
           </div> 
            
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="material-icons" style="font-size:18px">email</i> Enviar Donación</button>
         </div>
        </div>
      </form>
      </div>
      </div>