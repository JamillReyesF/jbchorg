@model jbchorg.Models.Mensaje

@{
    ViewData["Title"] = "Contacto";
}
<div class="container">
    <div class="px-3 py-3 pb-md-4 mx-auto text-center">
<h1>Contacto</h1>
<h3>Complete el siguiente formulario y un asesor se contactará para resolver sus dudas.</h3>
    </div>
    <div class="row">
    <div class="col-md-8 offset-md-2">    
<h3><label>Formulario de contacto de correo</label></h3>
</div>
    </div>
    <hr/>
@Html.ValidationSummary()

    <div class="row">

          <div class="col-md-10">

            <form asp-action="Contacto" >

           <div class="col-md-4">
               <div class="form-group"><label>Nombre:</label>
               <input asp-for="Nombre" class="form-control" />
               </div>
           </div>
           <div class="col-md-4">
               <div class="form-group"><label>Apellido Paterno:</label>
               <input asp-for="APaterno" class="form-control" />
               </div>
           </div>
           <div class="col-md-4">
               <div class="form-group"><label>Apellido Materno:</label><small>(Opcional)</small>
               <input asp-for="AMaterno" class="form-control" />
               </div>
           </div> 
           <div class="col-md-8">
               <div class="form-group"><label>Email:</label>
               <input asp-for="Correo" class="form-control" />
               </div>
           </div>
            <div class="col-md-4">
               <div class="form-group"><label>Teléfono de contacto:</label>
               <input asp-for="Movil" class="form-control" />
               </div>
           </div>
           <div class="col-md-8">
               <div class="form-group"><label>Asunto:</label>
               <input asp-for="Asunto" class="form-control" />
               </div>
           </div>
            <div class="col-md-8">
           <div class="form-group"><label>Mensaje:</label>
            <textarea row="4" cols="100" asp-for="Descripcion" class="form-control" />
            </textarea>
            </div>
        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-primary" />
            <button type="reset" value="Reset" class="btn btn-primary" />Reset</button>
        </div>
        </div>
      </form>
      </div>
      </div>
